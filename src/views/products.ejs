Â«<!DOCTYPE html>
<html lang="pt-br">
<!-- Include Head -->
<%- include('partials/head', {title: 'Todos os produtos'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- todos los produtos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos os produtos</h2>
			</div>

			<% products.forEach(function(product){ 
				let finalPrice = (product.price * ((100 - product.discount) / 100)).toFixed(0)
			%>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= product.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= product.image %>" alt="imagemdo produto">
							</figure>
							<article class="product-box_data">
								<h2><%= toThousand(finalPrice) %></h2>
								<span><%= product.discount %> %OFF</span>
								<p><%= product.name %></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
				<% }) %>
		
		</div>
	</div>
	<!-- /todos los produtos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>